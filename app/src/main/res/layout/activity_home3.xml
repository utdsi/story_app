    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/khokho1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>


   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="120dp"

       >

       <ImageView
           android:id="@+id/imageView1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:src="@drawable/below"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"

           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"

           tools:ignore="MissingConstraints" />
       <ImageView
           android:id="@+id/largerCircle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:srcCompat="@drawable/ellipse"
           app:layout_constraintTop_toTopOf="@id/imageView1"
           app:layout_constraintStart_toStartOf="@id/imageView1"
           app:layout_constraintEnd_toEndOf="@id/imageView1"
           app:layout_constraintBottom_toBottomOf="@id/imageView1"

           android:layout_marginBottom="60dp"/>

       <!-- Smaller circle -->
       <ImageView
           android:id="@+id/smallerCircle"
           android:layout_width="30dp"
           android:layout_height="30dp"
           app:srcCompat="@drawable/vector"
           app:layout_constraintTop_toTopOf="@id/largerCircle"
           app:layout_constraintStart_toStartOf="@id/largerCircle"
           app:layout_constraintEnd_toEndOf="@id/largerCircle"
           app:layout_constraintBottom_toBottomOf="@id/largerCircle"
           />


       <ImageView
           android:id="@+id/hdash"
           android:layout_width="7.5dp"
           android:layout_height="15dp"
           app:srcCompat="@drawable/v_dash"

           app:layout_constraintTop_toTopOf="@id/smallerCircle"
           app:layout_constraintStart_toStartOf="@id/smallerCircle"
           app:layout_constraintEnd_toEndOf="@id/smallerCircle"
           app:layout_constraintBottom_toBottomOf="@id/smallerCircle" />
       <ImageView
           android:id="@+id/vdash"
           android:layout_width="15dp"
           android:layout_height="7.5dp"
           app:srcCompat="@drawable/h_dash"

           app:layout_constraintTop_toTopOf="@id/smallerCircle"
           app:layout_constraintStart_toStartOf="@id/smallerCircle"
           app:layout_constraintEnd_toEndOf="@id/smallerCircle"
           app:layout_constraintBottom_toBottomOf="@id/smallerCircle" />


       <ImageView
           android:id="@+id/homeIcon"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintStart_toStartOf="@id/imageView1"
           android:paddingLeft="35dp"

           app:layout_constraintTop_toTopOf="@id/imageView1"
           app:layout_constraintBottom_toBottomOf="@id/imageView1"
           app:srcCompat="@drawable/baseline_home" />

       <ImageView
           android:id="@+id/peopleIcon"
           android:paddingRight="35dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintEnd_toEndOf="@id/imageView1"
           app:layout_constraintTop_toTopOf="@id/imageView1"
           app:layout_constraintBottom_toBottomOf="@id/imageView1"
           app:srcCompat="@drawable/baseline_person" />

   </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>